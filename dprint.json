{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "markdown": {
    "lineWidth": 120,
    "textWrap": "always"
  },
  "includes": ["**/*.md"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/target",
    "**/build",
    "**/.gradle",
    "**/dist"
  ],
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.17.8.wasm"
  ]
}
